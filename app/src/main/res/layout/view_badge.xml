<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="46dp"
             android:layout_height="46dp" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_gravity="center">
    <ImageView
            android:layout_width="@dimen/dimen_cart_icon"
            android:layout_height="@dimen/dimen_cart_icon"
            android:layout_gravity="center"
            android:src="@drawable/ic_cart"/>

    <com.giuseppesorce.cartanimation.CountetCartItemText
            android:id="@+id/view_alert_count_textview"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:visibility="gone"
            android:background="@drawable/redcircle"
            android:text="0"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            tools:text="3"/>

</FrameLayout>
